<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/_8sdp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    android:layout_marginHorizontal="@dimen/_15sdp"
    android:layout_marginVertical="@dimen/_4sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="20"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="@dimen/_10sdp">

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            app:cardCornerRadius="@dimen/_4sdp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/profilePictureImageview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/host_booking_booked_profile_pic"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"/>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="15"
            android:orientation="vertical"
            android:layout_marginHorizontal="@dimen/_8sdp">

            <TextView
                android:id="@+id/userNameTextview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jacky Shopy"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp"
                android:fontFamily="@font/inter_bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Check out"
                android:textColor="#9D9D9D"
                android:textSize="@dimen/_8sdp"
                android:fontFamily="@font/inter_regular"
                android:layout_marginTop="@dimen/_5sdp" />

            <TextView
                android:id="@+id/checkOutDateTextview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="28 Apr 2022 - 10.00 AM"
                android:textColor="@color/black"
                android:textSize="@dimen/_9sdp"
                android:fontFamily="@font/inter_regular"
                android:layout_marginTop="@dimen/_3sdp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Check in"
                android:textColor="#9D9D9D"
                android:textSize="@dimen/_8sdp"
                android:fontFamily="@font/inter_regular"
                android:layout_marginTop="@dimen/_5sdp" />

            <TextView
                android:id="@+id/checkInDateTextview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="25 Apr 2022 - 2.00 PM"
                android:textColor="@color/black"
                android:textSize="@dimen/_9sdp"
                android:fontFamily="@font/inter_regular"
                android:layout_marginTop="@dimen/_3sdp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4sdp">

                <TextView
                    android:id="@+id/bookingStatusTextview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:text="Booking completed"
                    android:textColor="#15CF74"
                    android:textSize="@dimen/_9sdp"
                    android:fontFamily="@font/inter_regular"/>

                <TextView
                    android:id="@+id/priceTextview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:text="32$/Day"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_11sdp"
                    android:fontFamily="@font/inter_bold" />

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>