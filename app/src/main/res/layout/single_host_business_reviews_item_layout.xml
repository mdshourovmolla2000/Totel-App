<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/_8sdp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    android:layout_marginHorizontal="@dimen/_15sdp"
    android:layout_marginVertical="@dimen/_4sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="@dimen/_10sdp"
        android:paddingEnd="0dp"
        android:paddingVertical="@dimen/_10sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profilePicImageview"
                android:layout_width="@dimen/_46sdp"
                android:layout_height="@dimen/_46sdp"
                android:src="@drawable/image_placeholder_square"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/profilePicImageview"
                android:layout_toStartOf="@id/arrowIconLayout"
                android:layout_centerVertical="true"
                android:orientation="vertical"
                android:layout_marginHorizontal="@dimen/_11sdp">

                <TextView
                    android:id="@+id/userNameTextview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mishell De Alwis"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp"
                    android:fontFamily="@font/sf_pro_text_bold"/>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4sdp">

                    <LinearLayout
                        android:id="@+id/starSectionLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_12sdp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@drawable/star_fill"
                            android:adjustViewBounds="true"/>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@drawable/star_fill"
                            android:adjustViewBounds="true"/>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@drawable/star_fill"
                            android:adjustViewBounds="true"/>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@drawable/star_fill"
                            android:adjustViewBounds="true"/>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@drawable/star_empty"
                            android:adjustViewBounds="true"/>

                        <TextView
                            android:id="@+id/ratingTextview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_2sdp"
                            android:text="(4.5)"
                            android:textColor="#4B4B4B"
                            android:textSize="@dimen/_9sdp"
                            android:fontFamily="@font/inter_regular" />

                    </LinearLayout>

                </RelativeLayout>

                <TextView
                    android:id="@+id/bookingNoTextview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Booking No : OGF123546"
                    android:textSize="@dimen/_9sdp"
                    android:textColor="#8E8E8E"
                    android:fontFamily="@font/sf_pro_text_regular"
                    android:layout_marginTop="@dimen/_3sdp"/>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/arrowIconLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/host_bg_start_rounded_2"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true">

                <ImageView
                    android:id="@+id/arrowIcon"
                    android:layout_width="@dimen/_12sdp"
                    android:layout_height="@dimen/_12sdp"
                    android:src="@drawable/down_arrow_white"
                    android:layout_margin="@dimen/_5sdp"/>

            </RelativeLayout>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/detailsSectionLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/_13sdp"
            android:layout_marginEnd="@dimen/_13sdp"
            android:visibility="gone">

            <TextView
                android:id="@+id/detailsTextview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Quisque fringilla ligula in diam aliquet feugiat. Cras eu aliquet dui. Proin luctus vestibulum lorem ac venenatis."
                android:justificationMode="inter_word"
                android:textSize="@dimen/_9sdp"
                android:textColor="#575757"
                android:fontFamily="@font/sf_pro_text_regular"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_13sdp">

                <ImageView
                    android:id="@+id/eyeIcon"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_13sdp"
                    android:src="@drawable/eye_icon"
                    android:adjustViewBounds="true"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:id="@+id/visitorCountTextview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="452"
                    android:textColor="#9F9F9F"
                    android:textSize="@dimen/_8sdp"
                    android:layout_toEndOf="@id/eyeIcon"
                    android:layout_marginStart="@dimen/_3sdp"/>

                <ImageView
                    android:id="@+id/shareIcon"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_13sdp"
                    android:src="@drawable/share_icon"
                    android:adjustViewBounds="true"
                    android:layout_toEndOf="@id/visitorCountTextview"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_27sdp"/>

                <TextView
                    android:id="@+id/shareCountTextview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="98"
                    android:textColor="#9F9F9F"
                    android:textSize="@dimen/_8sdp"
                    android:layout_toEndOf="@id/shareIcon"
                    android:layout_marginStart="@dimen/_3sdp"/>

                <TextView
                    android:id="@+id/dateTimeTextview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:text="1 day ago"
                    android:textColor="#9F9F9F"
                    android:textSize="@dimen/_8sdp"
                    android:fontFamily="@font/sf_pro_text_regular"/>

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>