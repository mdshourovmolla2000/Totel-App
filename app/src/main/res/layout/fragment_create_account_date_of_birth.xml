<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.auth_screen.create_account_screen.CreateAccountDateOfBirthFragment"
    android:orientation="vertical"
    android:padding="@dimen/_12sdp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set-Up Basic"
        android:textSize="@dimen/_22sdp"
        android:textColor="@color/black"
        android:fontFamily="@font/sf_pro_display_bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kindly tell us about your self for better connection."
        android:textSize="@dimen/_12sdp"
        android:textColor="@color/black"
        android:fontFamily="@font/sf_pro_text_regular"
        android:layout_marginTop="@dimen/_3sdp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date of Birth?"
        android:textSize="@dimen/_12sdp"
        android:textColor="@color/black"
        android:fontFamily="@font/sf_pro_text_bold"
        android:layout_marginTop="@dimen/_18sdp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_marginTop="@dimen/_6sdp">

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:cardBackgroundColor="#99EBEBF5"
            app:cardCornerRadius="@dimen/_9sdp"
            app:cardElevation="0dp"
            android:layout_marginEnd="@dimen/_9sdp"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <EditText
                android:id="@+id/dayEdittext"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:hint="Day"
                android:textColorHint="#993C3C43"
                android:textColor="@color/black"
                android:textSize="@dimen/_13sdp"
                android:inputType="textCapWords"
                android:fontFamily="@font/sf_pro_text_regular"
                android:layout_marginHorizontal="@dimen/_12sdp"
                android:layout_marginVertical="@dimen/_11sdp"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:cardBackgroundColor="#99EBEBF5"
            app:cardCornerRadius="@dimen/_9sdp"
            app:cardElevation="0dp"
            android:layout_marginEnd="@dimen/_9sdp"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <EditText
                android:id="@+id/monthEdittext"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:hint="Month"
                android:textColorHint="#993C3C43"
                android:textColor="@color/black"
                android:textSize="@dimen/_13sdp"
                android:inputType="textCapWords"
                android:fontFamily="@font/sf_pro_text_regular"
                android:layout_marginHorizontal="@dimen/_12sdp"
                android:layout_marginVertical="@dimen/_11sdp"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:cardBackgroundColor="#99EBEBF5"
            app:cardCornerRadius="@dimen/_9sdp"
            app:cardElevation="0dp"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <EditText
                android:id="@+id/yearEdittext"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:hint="Year"
                android:textColorHint="#993C3C43"
                android:textColor="@color/black"
                android:textSize="@dimen/_13sdp"
                android:inputType="textCapWords"
                android:fontFamily="@font/sf_pro_text_regular"
                android:layout_marginHorizontal="@dimen/_12sdp"
                android:layout_marginVertical="@dimen/_11sdp"/>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gender?"
        android:textSize="@dimen/_12sdp"
        android:textColor="@color/black"
        android:fontFamily="@font/sf_pro_text_bold"
        android:layout_marginTop="@dimen/_12sdp"/>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_6sdp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/maleButton"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_30sdp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetLeft="0dp"
                android:insetBottom="0dp"
                android:text="Male"
                android:textColor="@color/black"
                android:textSize="@dimen/_10sdp"
                android:fontFamily="@font/sf_pro_text_bold"
                android:backgroundTint="#F2F2F7"
                android:paddingVertical="@dimen/_8sdp"
                android:paddingHorizontal="@dimen/_12sdp"
                android:layout_marginStart="@dimen/_6sdp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/femaleButton"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_30sdp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetLeft="0dp"
                android:insetBottom="0dp"
                android:text="Female"
                android:textColor="@color/black"
                android:textSize="@dimen/_10sdp"
                android:fontFamily="@font/sf_pro_text_bold"
                android:backgroundTint="#F2F2F7"
                android:paddingVertical="@dimen/_8sdp"
                android:paddingHorizontal="@dimen/_12sdp"
                android:layout_marginStart="@dimen/_6sdp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/preferNotToSayButton"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_30sdp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetLeft="0dp"
                android:insetBottom="0dp"
                android:text="Prefer not to say"
                android:textColor="@color/black"
                android:textSize="@dimen/_10sdp"
                android:fontFamily="@font/sf_pro_text_bold"
                android:backgroundTint="#F2F2F7"
                android:paddingVertical="@dimen/_8sdp"
                android:paddingHorizontal="@dimen/_12sdp"
                android:layout_marginStart="@dimen/_6sdp"/>

        </LinearLayout>

    </HorizontalScrollView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/continueButton"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:insetTop="0dp"
        android:insetRight="0dp"
        android:insetLeft="0dp"
        android:insetBottom="0dp"
        android:layout_marginTop="@dimen/_18sdp"
        android:text="Continue"
        android:textSize="@dimen/_13sdp"
        android:textColor="@color/white"
        android:fontFamily="@font/sf_pro_text_bold"
        app:cornerRadius="@dimen/_20sdp"
        android:backgroundTint="@color/themeColor"/>

</LinearLayout>