<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_marginTop="@dimen/_3sdp"
    android:paddingHorizontal="@dimen/_12sdp"
    android:paddingVertical="@dimen/_9sdp">

    <com.denzcoskun.imageslider.ImageSlider
        android:id="@+id/imageSlider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_180sdp"
        app:iss_auto_cycle="false"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_9sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/optionIcon"
            android:layout_marginEnd="@dimen/_6sdp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/hotelNameTextview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hotel Name"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/black"
                android:fontFamily="@font/sf_pro_text_bold"/>

            <ImageView
                android:id="@+id/noEncryptionIcon"
                android:layout_width="@dimen/_12sdp"
                android:layout_height="@dimen/_12sdp"
                android:src="@drawable/profile_no_encryption_icon"
                android:layout_marginHorizontal="@dimen/_6sdp"
                android:visibility="gone"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/optionIcon"
            android:layout_width="@dimen/_18sdp"
            android:layout_height="@dimen/_18sdp"
            android:src="@drawable/home_booked_item_option_icon"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:paddingHorizontal="@dimen/_2sdp"
            android:paddingVertical="@dimen/_7sdp"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/hotelLocationTextview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_3sdp"
        android:text="Hotel Location"
        android:textSize="@dimen/_10sdp"
        android:textColor="#993C3C43"
        android:fontFamily="@font/sf_pro_text_regular"/>

    <TextView
        android:id="@+id/lookingPlacesTextview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_6sdp"
        android:text="Looking Places"
        android:textSize="@dimen/_12sdp"
        android:textColor="@color/black"
        android:fontFamily="@font/sf_pro_text_regular"/>

    <TextView
        android:id="@+id/dateTextview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_2sdp"
        android:text="Date"
        android:textSize="@dimen/_10sdp"
        android:textColor="#993C3C43"
        android:fontFamily="@font/sf_pro_text_regular"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp">

        <TextView
            android:id="@+id/priceTextview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/black"
            android:fontFamily="@font/sf_pro_text_regular"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@id/statusButton"
            android:layout_marginEnd="@dimen/_4sdp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/statusButton"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_20sdp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:insetBottom="0dp"
            android:insetLeft="0dp"
            android:insetRight="0dp"
            android:insetTop="0dp"
            android:text="Finished"
            android:textColor="#993C3C43"
            android:textSize="@dimen/_10sdp"
            android:fontFamily="@font/sf_pro_text_regular"
            android:backgroundTint="#F2F2F7"
            android:paddingHorizontal="@dimen/_9sdp"
            android:paddingVertical="@dimen/_3sdp"
            android:visibility="gone"/>

    </RelativeLayout>

</LinearLayout>