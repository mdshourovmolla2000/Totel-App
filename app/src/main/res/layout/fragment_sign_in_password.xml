<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.auth_screen.sign_in_screen.SignInPasswordFragment"
    android:orientation="vertical"
    android:padding="@dimen/_12sdp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textSize="@dimen/_22sdp"
        android:textColor="@color/black"
        android:fontFamily="@font/sf_pro_display_bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_3sdp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="At least 8 digit."
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/black"
            android:fontFamily="@font/sf_pro_text_regular"/>

        <TextView
            android:id="@+id/mobileNumberTextview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="help?"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/themeColor"
            android:fontFamily="@font/sf_pro_text_bold"
            android:layout_marginStart="@dimen/_3sdp"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your password"
        android:textSize="@dimen/_12sdp"
        android:textColor="@color/black"
        android:fontFamily="@font/sf_pro_text_bold"
        android:layout_marginTop="@dimen/_18sdp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        app:cardBackgroundColor="#99EBEBF5"
        app:cardCornerRadius="@dimen/_9sdp"
        app:cardElevation="0dp"
        android:layout_marginTop="@dimen/_6sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/_12sdp"
            android:paddingVertical="@dimen/_10sdp"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <EditText
                android:id="@+id/passwordEdittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@id/passwordToggleIcon"
                android:layout_marginEnd="@dimen/_12sdp"
                android:background="@null"
                android:hint="Enter password"
                android:textColorHint="#993C3C43"
                android:textColor="@color/black"
                android:textSize="@dimen/_13sdp"
                android:inputType="textPassword"
                android:fontFamily="@font/sf_pro_text_regular"/>

            <ImageView
                android:id="@+id/passwordToggleIcon"
                android:layout_width="@dimen/_18sdp"
                android:layout_height="@dimen/_18sdp"
                android:src="@drawable/password_hide_icon"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/signInButton"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:insetTop="0dp"
        android:insetRight="0dp"
        android:insetLeft="0dp"
        android:insetBottom="0dp"
        android:layout_marginTop="@dimen/_18sdp"
        android:text="Sign In"
        android:textSize="@dimen/_13sdp"
        android:textColor="@color/white"
        android:fontFamily="@font/sf_pro_text_bold"
        app:cornerRadius="@dimen/_20sdp"
        android:backgroundTint="@color/themeColor"/>

    <TextView
        android:id="@+id/forgotPasswordButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot Password?"
        android:textSize="@dimen/_12sdp"
        android:textColor="#3C3C43"
        android:fontFamily="@font/sf_pro_text_regular"
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_gravity="center_horizontal"/>

</LinearLayout>