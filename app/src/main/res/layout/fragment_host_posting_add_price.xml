                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_12sdp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/sundayPlusButton"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    app:cardCornerRadius="@dimen/_15sdp"
                    app:cardBackgroundColor="@color/white"
                    app:cardElevation="0dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/rounded_border_bg">

                        <ImageView
                            android:layout_width="@dimen/_18sdp"
                            android:layout_height="@dimen/_18sdp"
                            android:adjustViewBounds="true"
                            android:src="@drawable/host_posting_plus_icon"
                            android:layout_centerInParent="true"/>

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/sundayCounterTextview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_border_bg"
                    android:text="$24.00"
                    android:textSize="@dimen/_11sdp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/inter_bold"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@id/sundayPlusButton"
                    android:layout_marginHorizontal="@dimen/_14sdp"
                    android:paddingVertical="@dimen/_6sdp"
                    android:paddingHorizontal="@dimen/_9sdp"/>

                <androidx.cardview.widget.CardView
                    android:id="@+id/sundayMinusButton"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    app:cardCornerRadius="@dimen/_15sdp"
                    app:cardBackgroundColor="@color/white"
                    app:cardElevation="0dp"
                    android:layout_toStartOf="@id/sundayCounterTextview"
                    android:layout_centerVertical="true"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/rounded_border_bg">

                        <ImageView
                            android:layout_width="@dimen/_18sdp"
                            android:layout_height="@dimen/_18sdp"
                            android:adjustViewBounds="true"
                            android:src="@drawable/host_posting_minus_icon"
                            android:layout_centerInParent="true"/>

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:text="Sunday"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/inter_bold"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@id/sundayMinusButton"/>

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

    <RelativeLayout
        android:id="@+id/bottomSectionLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#FCFCFD">

        <View
            android:id="@+id/bottomTopLine"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#EAEBF0"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_30sdp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="@dimen/_15sdp"
            app:cardElevation="0dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            android:layout_toStartOf="@id/continueButton"
            android:layout_marginEnd="@dimen/_12sdp"
            android:layout_centerVertical="true">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Back"
                android:textColor="#272D37"
                android:textSize="@dimen/_9sdp"
                android:fontFamily="@font/inter_bold"
                android:background="@drawable/border_with_white_bg"
                android:paddingVertical="@dimen/_6sdp"
                android:paddingHorizontal="@dimen/_17sdp"
                android:gravity="center"/>

        </androidx.cardview.widget.CardView>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/continueButton"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_30sdp"
            android:layout_centerVertical="true"
            android:insetTop="0dp"
            android:insetRight="0dp"
            android:insetLeft="0dp"
            android:insetBottom="0dp"
            android:text="Continue"
            android:textSize="@dimen/_9sdp"
            android:textColor="@color/white"
            android:fontFamily="@font/inter_bold"
            android:backgroundTint="#574EFA"
            android:layout_alignParentEnd="true"
            android:layout_marginVertical="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:paddingVertical="@dimen/_6sdp"
            android:paddingHorizontal="@dimen/_17sdp"
            android:layout_below="@id/bottomTopLine"/>

    </RelativeLayout>

</RelativeLayout>