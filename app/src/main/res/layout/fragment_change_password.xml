<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.profile_screen.settings_screen.ChangePasswordFragment"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/titleBarLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_43sdp"
        android:orientation="horizontal"
        android:background="@color/white"
        android:padding="@dimen/_5sdp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/backIcon"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:background="@drawable/ripple_effect_background_in_white"
            android:clickable="true"
            android:focusable="true"
            android:padding="@dimen/_5sdp"
            android:src="@drawable/main_back_icon"/>

        <TextView
            android:id="@+id/titleTextview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_9sdp"
            android:text="Change Password"
            android:textColor="@color/black"
            android:textSize="@dimen/_13sdp"
            android:fontFamily="@font/sf_pro_display_bold"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#26000000"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:padding="@dimen/_12sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="At least 8 digit should be in your password."
                    android:textColor="@color/black"
                    android:textSize="@dimen/_11sdp"
                    android:fontFamily="@font/sf_pro_text_regular"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Help?"
                    android:textColor="@color/themeColor"
                    android:textSize="@dimen/_11sdp"
                    android:fontFamily="@font/sf_pro_text_regular"/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_3sdp"
                android:text="By proceeding, you consent to get calls, WhatsApp or SMS messages, including by automated means, from Totel and its affiliates to the number provided."
                android:textSize="@dimen/_10sdp"
                android:textColor="#993C3C43"
                android:fontFamily="@font/sf_pro_text_regular"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Current password"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/black"
                android:fontFamily="@font/sf_pro_text_bold"
                android:layout_marginTop="@dimen/_18sdp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                app:cardBackgroundColor="#99EBEBF5"
                app:cardCornerRadius="@dimen/_9sdp"
                app:cardElevation="0dp"
                android:layout_marginTop="@dimen/_6sdp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="@dimen/_12sdp"
                    android:paddingVertical="@dimen/_10sdp"
                    android:focusable="true"
                    android:focusableInTouchMode="true">

                    <EditText
                        android:id="@+id/currentPasswordEdittext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toStartOf="@id/currentPasswordToggleIcon"
                        android:layout_marginEnd="@dimen/_12sdp"
                        android:background="@null"
                        android:hint="Enter password"
                        android:textColorHint="#993C3C43"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_13sdp"
                        android:inputType="textPassword"
                        android:fontFamily="@font/sf_pro_text_regular"/>

                    <ImageView
                        android:id="@+id/currentPasswordToggleIcon"
                        android:layout_width="@dimen/_18sdp"
                        android:layout_height="@dimen/_18sdp"
                        android:src="@drawable/password_hide_icon"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"/>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New password"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/black"
                android:fontFamily="@font/sf_pro_text_bold"
                android:layout_marginTop="@dimen/_12sdp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                app:cardBackgroundColor="#99EBEBF5"
                app:cardCornerRadius="@dimen/_9sdp"
                app:cardElevation="0dp"
                android:layout_marginTop="@dimen/_6sdp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="@dimen/_12sdp"
                    android:paddingVertical="@dimen/_10sdp"
                    android:focusable="true"
                    android:focusableInTouchMode="true">

                    <EditText
                        android:id="@+id/newPasswordEdittext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toStartOf="@id/newPasswordToggleIcon"
                        android:layout_marginEnd="@dimen/_12sdp"
                        android:background="@null"
                        android:hint="Confirm password"
                        android:textColorHint="#993C3C43"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_13sdp"
                        android:inputType="textPassword"
                        android:fontFamily="@font/sf_pro_text_regular"/>

                    <ImageView
                        android:id="@+id/newPasswordToggleIcon"
                        android:layout_width="@dimen/_18sdp"
                        android:layout_height="@dimen/_18sdp"
                        android:src="@drawable/password_hide_icon"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"/>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/changePasswordButton"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetLeft="0dp"
                android:insetBottom="0dp"
                android:layout_marginTop="@dimen/_18sdp"
                android:text="Change Password"
                android:textSize="@dimen/_13sdp"
                android:textColor="@color/white"
                android:fontFamily="@font/sf_pro_text_bold"
                app:cornerRadius="@dimen/_20sdp"
                android:backgroundTint="@color/themeColor"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>